# Telegram Bot Configuration
BOT=your_telegram_bot_token_here
CHAT_ID=your_chat_id_here
ENABLE_TELEGRAM=true

# Server
PORT=3102
NODE_ENV=production
PUBLIC_URL=https://your-public-url.com

# EDU Chain Configuration (EVM)
EDU_RPC=https://rpc.open-campus-codex.gelato.digital
EDU_AGGREGATOR=0xd007494945580eEb25522c8e0b2fa798B3F0FDE2  # Proxy contract address (not implementation)
# Add your private key below - make sure to fund this account!
EDU_PK=your_private_key_here
# Enable mock mode to skip actual transactions (for testing without permissions)
EDU_MOCK=false

# zkVerify Configuration (using official endpoints)
ZKV_WS=wss://volta-rpc.zkverify.io
# Path to your wallet JSON file with tVFY tokens
ZKV_WALLET_PATH=./GAS.json
# Enable zkVerify submission (set to true to use zkVerify instead of EDU Chain)
ZKV_ENABLED=true

# Ape Express API
APE_EXPRESS_API=https://ape.express

# Bot Configuration
BUY_AMOUNT=1
MAX_GAS_PRICE=150000000000
CHECK_INTERVAL=2
MAX_TOKENS_PER_SESSION=10

# Block-based monitoring
# Set USE_BLOCK_MONITOR=true to trigger checks on each new block
USE_BLOCK_MONITOR=true
# How frequently to poll for new blocks (ms) when using HTTP provider
BLOCK_POLL_INTERVAL_MS=1000

# Exit strategy / monitoring
# After a buy, the bot polls DexScreener to detect heavy sell pressure or big market-cap drops
POSITION_POLL_INTERVAL_MS=5000
SELL_PRESSURE_COUNT=5
SELL_PRESSURE_WINDOW_MS=30000
SELL_PERCENT_ON_TRIGGER=100
MAX_MCAP_DROP_PCT=30
BUY_SLIPPAGE_BPS=100
SELL_SLIPPAGE_BPS=150
SELL_MIN_USD=50
ENABLE_JUPITER_FALLBACK_SELL=true
# Exit trigger refinements (price-based + early grace + sell bursts)
MIN_PRICE_DROP_PCT=12
EARLY_SELL_GRACE_MS=15000
SELL_BURST_COUNT=8
# Take profit: when value >= multiplier * costBasis, sell base percent (50%)
TAKE_PROFIT_MULTIPLIER=2
TAKE_PROFIT_SELL_PERCENT_BASE=50
TAKE_PROFIT_FEE_BUFFER_SOL=0.00006

# Wallet Configuration (Set these in production)
WALLET_ADDRESS=your_wallet_address_here
WALLET_PRIVATE_KEY=your_private_key_here

# MongoDB Configuration (optional)
MONGODB_URI=mongodb://localhost:27017/degenbot

# Server Configuration
PORT=3000
NODE_ENV=production 